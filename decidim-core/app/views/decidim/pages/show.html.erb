<% add_decidim_meta_tags(
  title: translated(@page, :title),
  description: translated(@page, :content)
) %>

<%
edit_link(
  decidim_admin.edit_static_page_path(@page),
  :update,
  :static_page,
  static_page: @page
)
%>

<% if @topic %>
  <%= render partial: "tabbed", locals: {
    title: translated(@topic, :title),
    description: translated(@topic, :description),
    page: @page,
    pages: @pages
  } %>
<% else %>
  <%= render partial: "standalone", locals: {
    title: translated(@page, :title),
    description: nil,
    page: @page
  } %>
<% end %>
