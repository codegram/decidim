<div class="row column">
  <%= content_tag :div, class: "callout announcement mb-sm #{callout_class} cell-announcement" do %>
    <% if announcement.try(:title).present? %>
      <span><%= decidim_sanitize translated(announcement, :title) %></span>

      <p><%= decidim_sanitize translated(announcement, :body) %></p>
    <% else %>
      <%= decidim_sanitize translated(self, :announcement) %>
    <% end %>
  <% end %>
</div>
